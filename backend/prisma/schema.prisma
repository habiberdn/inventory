generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  password    String
  field       String?
  description String
  role        Role      @default(Admin)
  created_at  DateTime? @default(now())
}

model Product {
  id            Int       @id @unique @default(autoincrement())
  name          String    @unique
  description   String
  status        Status?   @default(OK)
  created_at    DateTime? @default(now())
  category      Category  @relation(fields: [category_name], references: [category_name])
  category_name String
  prize         Int
  amount        Int
  Variant       Variant[]
  photo         Photo[]
}

model Variant{
  id            Int        @id @unique @default(autoincrement())
  variantName   String     @unique
  product       Product    @relation(fields: [product_name], references: [name])
  product_name  String
  variantValue  VariantValue[]
}

model VariantValue{
  id            Int        @id @unique @default(autoincrement())
  name          String
  variant       Variant    @relation(fields: [variantName], references: [variantName])
  variantName   String     
}

model Category {
  id            Int        @id @unique @default(autoincrement())
  name          Product[] 
  category_name String     @unique
  level         Int        @db.SmallInt
  parentId      Int?       
  parent        Category?  @relation("CategoryToSubcategories", fields: [parentId], references: [id])
  subcategories Category[] @relation("CategoryToSubcategories")
}

model Photo {
  id         Int     @id @unique @default(autoincrement())
  photo_name String
  name       Product @relation(fields: [photo_name], references: [name])
}

enum Status {
  Pending
  OK
  Expired
}

enum Role {
  SuperAdmin
  Admin
}
