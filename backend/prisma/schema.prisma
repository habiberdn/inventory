generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int       @id @default(autoincrement())  
  username              String    @unique
  password              String
  field                 String?
  description           String
  role                  Role      @default(Admin)
  created_at            DateTime? @default(now())
}

model Product { 
  id                    Int       @id @default(autoincrement()) @unique
  name                  String    @db.Text() @unique
  stock                 Stock[]
  description           String
  status                Status?   @default(OK)    
  category              Category[]
  photo                 Photo[]
  created_at            DateTime? @default(now())
}

model Category {
  id                    Int       @id @default(autoincrement()) @unique
  name                  Product   @relation(fields: [category_name], references: [name])
  category_name         String    @db.Text() @unique
  path                  String    @unique
}

model Photo {
  id                    Int       @id @default(autoincrement()) @unique
  name                  Product   @relation(fields: [photo_name], references: [name])
  photo_name            String
}

model Stock {
  id                    Int       @id @default(autoincrement()) @unique
  product               Product   @relation(fields:[product_name],references:[name])
  product_name          String
  supplier              String
  jumlah                Int
  expired_date          DateTime?
  date_buy              DateTime
}

enum Status {
  Pending
  OK
  Expired
}

enum Role {
  SuperAdmin
  Admin
}
